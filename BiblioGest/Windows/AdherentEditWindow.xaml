<Window x:Class="BiblioGest.Windows.AdherentEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiblioGest.Windows"
        mc:Ignorable="d"
        Title="Édition d'un adhérent" Height="450" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <TextBlock Text="{Binding WindowTitle}" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Formulaire -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nom -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Nom :" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         x:Name="NomTextBox"
                         Text="{Binding Adherent.Nom, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,10"/>

                <!-- Prénom -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Prénom :" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         x:Name="PrenomTextBox"
                         Text="{Binding Adherent.Prenom, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,10"/>

                <!-- Email -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="Email :" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox Grid.Row="2" Grid.Column="1" 
                         x:Name="EmailTextBox"
                         Text="{Binding Adherent.Email, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,10"/>

                <!-- Téléphone -->
                <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="Téléphone :" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox Grid.Row="3" Grid.Column="1" 
                         x:Name="TelephoneTextBox"
                         Text="{Binding Adherent.Telephone, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,10"/>
            </Grid>
        </StackPanel>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Enregistrer" 
                    Width="100" 
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button Content="Annuler" 
                    Width="100"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 