<Page x:Class="BiblioGest.Pages.LivresPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BiblioGest.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Gestion des Livres">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Gestion des Livres" 
                     FontSize="24" 
                     FontWeight="Bold" 
                     Margin="0,0,0,10"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Barre de recherche -->
                <TextBox Grid.Column="0" 
                         x:Name="SearchBox"
                         Margin="0,0,10,0"
                         Padding="5"
                         TextChanged="SearchBox_TextChanged"/>

                <!-- Bouton Ajouter -->
                <Button Grid.Column="1" 
                        Content="Ajouter un livre" 
                        Padding="10,5"
                        Margin="0,0,10,0"
                        Click="AddBook_Click"/>

                <!-- Bouton Supprimer -->
                <Button Grid.Column="2" 
                        Content="Supprimer" 
                        Padding="10,5"
                        Click="DeleteBook_Click"/>
            </Grid>
        </StackPanel>

        <!-- Liste des livres -->
        <DataGrid Grid.Row="1" 
                  x:Name="LivresGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="LivresGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="120"/>
                <DataGridTextColumn Header="Titre" Binding="{Binding Titre}" Width="*"/>
                <DataGridTextColumn Header="Auteur" Binding="{Binding Auteur}" Width="150"/>
                <DataGridTextColumn Header="Éditeur" Binding="{Binding Editeur}" Width="150"/>
                <DataGridTextColumn Header="Année" Binding="{Binding AnneePublication}" Width="80"/>
                <DataGridCheckBoxColumn Header="Disponible" Binding="{Binding Disponible}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>